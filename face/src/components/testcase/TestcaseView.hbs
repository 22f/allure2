<a class="pane__overlay" href="#{{route.baseUrl}}/{{uid}}"></a>
<h2 class="pane__title">
    <span class="label label_status_{{status}}">{{status}}</span>
    <span class="pane__controls">
        <a class="fa fa-expand pane__expand" data-tooltip="Expand" href="#{{route.baseUrl}}/{{uid}}?expanded=true"></a>
        <a class="fa fa-compress pane__collapse" data-tooltip="Collapse" href="#{{route.baseUrl}}/{{uid}}"></a>
        <a class="fa fa-close" data-tooltip="Close" href="#{{route.baseUrl}}"></a>
    </span>
    {{name}}
</h2>

{{#if failure}}
    <div class="testcase__failure alert message message_status_{{status}}">
        <pre class="alert__code"><code>{{failure.message}}</code></pre>
        <div class="testcase__trace-toggle clickable"></div>
        <pre class="alert__code testcase__trace"><code>{{failure.trace}}</code></pre>
    </div>
{{else}}
    <div class="alert message message_status_{{status}}">
        The test has been passed!
    </div>
{{/if}}

<div class="testcase__content_before"></div>
<div class="testcase__steps"></div>
<div class="testcase__content_after"></div>
